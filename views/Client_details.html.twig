
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/bootstrap-theme.min.css" type="text/css">
    <link rel="stylesheet" href="css/styles.css" type="text/css">

    <script src="js/jquery-1.12.0.js"></script>
    <script src="js/scripts.js"></script>
    <title></title>
  </head>
  <body>
      <div class="container">
          <h1>{{ client.getClientName }}</h1>
          <p> {{ client.getPhone }}</p>
          <p> {{ client.getEmail}}</p>

            <!-- Edit Client -->
            <h1>Update {{ client.getClientName }}</h1>

            <form action="/clients/{{ client.getId }}/edit" method="post">
            <input name="_method" type="hidden" value="patch">

            <label for="name">Update Name:</label>
            <input id="name" name="name" type="text" value="{{ client.getClientName }}">

            <label for="phone">Update Phone:</label>
            <input id="phone" name="phone" type="text" value="{{ client.getPhone }}">

            <label for="email">Update Email:</label>
            <input id="email" name="email" type="text" value="{{ client.getEmail }}">

            <button type="submit">Update</button>
            </form>

<!-- Delete Client -->
          <form action="/clients/{{ client.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit">Delete Client</button>
          </form>

          <p><a href='/'>Home</a></p>

      </div>
  </body>
</html>
