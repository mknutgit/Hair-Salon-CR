<h1>Update this stylist: {{ stylist.getName }}</h1>

<form action="/stylist/{{ stylist.getId }}" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="type">Rename the stylist:</label>
  <input id="type" name="type" type="text">

  <button type="submit">Update</button>
</form>

